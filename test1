-- ‡πÇ‡∏´‡∏•‡∏î Kavo UI
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("ESP System", "DarkTheme")

-- ‡πÅ‡∏ó‡πá‡∏ö ESP
local tabESP = Window:NewTab("ESP")
local sectionESP = tabESP:NewSection("ESP Options")
local sectionSpeed = tabESP:NewSection("Movement")

-- ‡πÅ‡∏ó‡πá‡∏ö Teleport
local tabTP = Window:NewTab("Teleport")
local sectionTP = tabTP:NewSection("Fast Travel")

-- ‡πÅ‡∏ó‡πá‡∏ö High Jump
local tabJump = Window:NewTab("High Jump")
local sectionJump = tabJump:NewSection("Jump Power")

-- ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡πÅ‡∏•‡∏∞‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
local toggleNameESP = false
local toggleHitboxESP = false
local toggleLineESP = false
local speedEnabled = false
local jumpEnabled = false
local jumpPowerValue = 50 -- ‡∏Ñ‡πà‡∏≤‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô jump power

local defaultSpeed = 16
local fastSpeed = 50
local defaultJump = 50

local humanoid
local zerrettesHumanoid = nil

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ï‡∏£‡∏ß‡∏à‡∏ß‡πà‡∏≤‡∏™‡∏±‡∏ï‡∏ß‡πå
local function isAnimal(model)
	local humanoid = model:FindFirstChildOfClass("Humanoid")
	return humanoid and not game.Players:GetPlayerFromCharacter(model)
end

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á ESP ‡∏ä‡∏∑‡πà‡∏≠
local function createESP(part, name)
	if part:FindFirstChild("ESP") then return end

	local gui = Instance.new("BillboardGui")
	gui.Name = "ESP"
	gui.Adornee = part
	gui.Size = UDim2.new(0, 100, 0, 40)
	gui.StudsOffset = Vector3.new(0, 3, 0)
	gui.AlwaysOnTop = true

	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, 0, 1, 0)
	label.BackgroundTransparency = 1
	label.Text = name
	label.TextColor3 = Color3.fromRGB(0, 255, 0)
	label.TextStrokeTransparency = 0.5
	label.TextScaled = true
	label.Font = Enum.Font.SourceSansBold
	label.Parent = gui

	gui.Parent = part
	table.insert(espObjects, gui)
end

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Hitbox
local function createHitbox(model)
	for _, part in ipairs(model:GetDescendants()) do
		if part:IsA("BasePart") and part.Transparency < 1 then
			local box = Instance.new("BoxHandleAdornment")
			box.Size = part.Size
			box.Adornee = part
			box.AlwaysOnTop = true
			box.ZIndex = 10
			box.Transparency = 0.7
			box.Color3 = Color3.fromRGB(0, 255, 0)
			box.Parent = part
			table.insert(hitboxObjects, box)
		end
	end
end

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÄ‡∏™‡πâ‡∏ô Line ESP
local function createLine(model)
	local line = Drawing.new("Line")
	line.Thickness = 1.5
	line.Transparency = 1
	line.Color = Color3.fromRGB(255, 0, 0)
	line.Visible = true

	local render = game:GetService("RunService").RenderStepped:Connect(function()
		local player = game.Players.LocalPlayer
		local cam = workspace.CurrentCamera
		local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
		local part = model:FindFirstChild("HumanoidRootPart") or model:FindFirstChild("Head")
		if not (hrp and part) then
			line.Visible = false
			return
		end

		local from = cam:WorldToViewportPoint(hrp.Position)
		local to = cam:WorldToViewportPoint(part.Position)
		line.From = Vector2.new(from.X, from.Y)
		line.To = Vector2.new(to.X, to.Y)
		line.Visible = true
	end)

	table.insert(lineObjects, {line = line, conn = render})
end

-- ‡∏à‡∏±‡∏î‡∏Å‡∏≤‡∏£‡∏™‡∏±‡∏ï‡∏ß‡πå‡∏ï‡∏±‡∏ß‡πÄ‡∏î‡∏µ‡∏¢‡∏ß
local function handleAnimal(model)
	if not isAnimal(model) then return end

	local head = model:FindFirstChild("Head")
	if toggleNameESP and head then createESP(head, model.Name) end
	if toggleHitboxESP then createHitbox(model) end
	if toggleLineESP then createLine(model) end

	local conn = model.AncestryChanged:Connect(function(_, parent)
		if not parent then
			if head and head:FindFirstChild("ESP") then head.ESP:Destroy() end
		end
	end)
	table.insert(allConnections, conn)
end

-- ‡∏•‡πâ‡∏≤‡∏á ESP ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
local function clearAllESP()
	for _, obj in ipairs(espObjects) do if obj then obj:Destroy() end end
	for _, box in ipairs(hitboxObjects) do if box then box:Destroy() end end
	for _, item in ipairs(lineObjects) do
		if item.line then item.line:Remove() end
		if item.conn then item.conn:Disconnect() end
	end
	for _, conn in ipairs(allConnections) do if conn then conn:Disconnect() end end

	espObjects = {}
	hitboxObjects = {}
	lineObjects = {}
	allConnections = {}
end

-- ‡πÇ‡∏´‡∏•‡∏î‡∏™‡∏±‡∏ï‡∏ß‡πå‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
local function reloadAll()
	clearAllESP()
	for _, model in ipairs(workspace:WaitForChild("Characters"):GetChildren()) do
		if model:IsA("Model") then
			handleAnimal(model)
		end
	end
end

-- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ï‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡πÅ‡∏•‡∏∞‡∏Å‡∏≤‡∏£‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î
local function updateHumanoid()
	-- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ï WalkSpeed ‡∏Ç‡∏≠‡∏á‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô
	local char = game.Players.LocalPlayer.Character
	if char then
		humanoid = char:FindFirstChildOfClass("Humanoid")
		if humanoid then
			humanoid.WalkSpeed = speedEnabled and fastSpeed or defaultSpeed
		end
	end
	
	-- ‡∏≠‡∏±‡∏û‡πÄ‡∏î‡∏ï JumpPower ‡∏Ç‡∏≠‡∏á workspace.zerrettes.Humanoid
	if workspace:FindFirstChild("zerrettes") then
		if not zerrettesHumanoid or not zerrettesHumanoid.Parent then
			zerrettesHumanoid = workspace.zerrettes:FindFirstChildOfClass("Humanoid")
		end
		if zerrettesHumanoid then
			zerrettesHumanoid.JumpPower = jumpEnabled and jumpPowerValue or defaultJump
		end
	end
end

-- ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£‡πÄ‡∏Å‡πá‡∏ö‡∏ß‡∏±‡∏ï‡∏ñ‡∏∏ ESP
local espObjects, hitboxObjects, lineObjects, allConnections = {}, {}, {}, {}

-- ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡πÇ‡∏´‡∏•‡∏î‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£‡πÉ‡∏´‡∏°‡πà
game.Players.LocalPlayer.CharacterAdded:Connect(function(char)
	wait(1)
	updateHumanoid()
end)

-- ‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏™‡∏±‡∏ï‡∏ß‡πå‡πÉ‡∏´‡∏°‡πà
workspace.Characters.ChildAdded:Connect(function(model)
	if model:IsA("Model") then
		model:WaitForChild("Head", 5)
		model:WaitForChildOfClass("Humanoid", 5)
		handleAnimal(model)
	end
end)

-- UI ESP Toggle
sectionESP:NewToggle("üß† Name ESP", "‡πÅ‡∏™‡∏î‡∏á‡∏ä‡∏∑‡πà‡∏≠‡∏™‡∏±‡∏ï‡∏ß‡πå", function(state)
	toggleNameESP = state
	reloadAll()
end)

sectionESP:NewToggle("üü© Hitbox ESP", "‡πÅ‡∏™‡∏î‡∏á‡∏Å‡∏•‡πà‡∏≠‡∏á‡∏£‡∏≠‡∏ö‡∏™‡∏±‡∏ï‡∏ß‡πå", function(state)
	toggleHitboxESP = state
	reloadAll()
end)

sectionESP:NewToggle("üî¥ Line ESP", "‡πÄ‡∏™‡πâ‡∏ô‡∏à‡∏≤‡∏Å‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡πÑ‡∏õ‡∏¢‡∏±‡∏á‡∏™‡∏±‡∏ï‡∏ß‡πå", function(state)
	toggleLineESP = state
	reloadAll()
end)

-- UI Speed Hack Toggle
sectionSpeed:NewToggle("üèÉ‚Äç‚ôÇÔ∏è Speed Hack", "‡∏ß‡∏¥‡πà‡∏á‡πÄ‡∏£‡πá‡∏ß", function(state)
	speedEnabled = state
	updateHumanoid()
end)

-- UI High Jump Toggle + Slider
sectionJump:NewToggle("ü¶ò High Jump", "‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î‡∏™‡∏π‡∏á", function(state)
	jumpEnabled = state
	updateHumanoid()
end)

sectionJump:NewSlider("‚ö° Jump Power", "‡∏õ‡∏£‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏π‡∏á‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î (‡∏™‡∏π‡∏á‡∏™‡∏∏‡∏î 200)", 200, 50, function(value)
	jumpPowerValue = value
	if jumpEnabled then
		updateHumanoid()
	end
end)

-- UI Teleport Button
sectionTP:NewButton("üî• ‡∏ß‡∏≤‡∏£‡πå‡∏õ‡πÑ‡∏õ‡∏Å‡∏≠‡∏á‡πÑ‡∏ü", "Teleport ‡πÑ‡∏õ‡∏¢‡∏±‡∏á MainFire", function()
	local char = game.Players.LocalPlayer.Character
	local root = char and char:FindFirstChild("HumanoidRootPart")
	local target = workspace:FindFirstChild("Map") and workspace.Map:FindFirstChild("Campground")
	if root and target and target:FindFirstChild("MainFire") and target.MainFire:FindFirstChild("Model") then
		local fireModel = target.MainFire.Model
		if not fireModel.PrimaryPart then
			fireModel.PrimaryPart = fireModel:FindFirstChildWhichIsA("BasePart")
		end
		if fireModel.PrimaryPart then
			root.CFrame = fireModel.PrimaryPart.CFrame + Vector3.new(0, 5, 0)
		else
			warn("MainFire.Model ‡πÑ‡∏°‡πà‡∏°‡∏µ PrimaryPart")
		end
	else
		warn("‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á MainFire.Model")
	end
end)
